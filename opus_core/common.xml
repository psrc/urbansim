<project basedir=".">
	<property environment="env"/>
	<property name="fireman_user" value="${env.USER}" />
	<property name="major" value="4" />
	<property name="minor" value="1" />
	<property name="python_build_number_file" value="${basedir}/__init__.py" />

    <target name="update-python-build-number" if="fireman.build" description="Update build number">
        <echo message="Update build number"/>
		<chmod perm="u+w">
		  <fileset file="${python_build_number_file}" />
		</chmod>
        <exec executable="python">
            <env key="PYTHONPATH" path="${pythonpathdir}:${env.PYTHONPATH}" />
            <arg line="${pythonpathdir}/opus_core/update_build_number.py ${python_build_number_file} ${BUILDNUMBER}"/>
        </exec>
		<cvs command="commit -m '(${fireman_user}) Updated build number.' ${python_build_number_file}" />
    </target>
</project>
