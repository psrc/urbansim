<cruisecontrol>
  <project name="opus_manual" buildafterfailed="False">
    <listeners>
      <currentbuildstatuslistener file="logs/${project.name}/status.txt" />
    </listeners>
    <bootstrappers>
      <cvsbootstrapper localWorkingCopy="projects/${project.name}" />
    </bootstrappers>
    <modificationset quietperiod="${quietperiod}">
      <cvs localWorkingCopy="projects/${project.name}" />
    </modificationset>
    <schedule interval="${interval}">
      <ant anthome="${ant.home}" buildfile="projects/${project.name}/build.xml" target="build-latex-docs" />
    </schedule>
    <publishers>
      <onsuccess>
        <artifactspublisher dest="artifacts/${project.name}" file="projects/${project.name}/docs/latex/userguide.pdf" />
        <artifactspublisher dest="artifacts/${project.name}" dir="projects/${project.name}/docs/latex/userguide" subdirectory="html" />
      </onsuccess>
    </publishers>
  </project>
</cruisecontrol>