<cruisecontrol>
  <project name="nightly" buildafterfailed="False" requireModification="False">
    <listeners>
      <currentbuildstatuslistener file="logs/${project.name}/status.txt" />
    </listeners>
    <bootstrappers>
      <cvsbootstrapper localWorkingCopy="projects/${project.name}" />
    </bootstrappers>
    <modificationset quietperiod="${quietperiod}">
      <timebuild time="1200" />
    </modificationset>
    <schedule interval="${interval}">
      <ant anthome="${ant.home}" buildfile="build.xml" target="run-build">
      	<property name="buildpath" value="projects/${project.name}" />
      </ant>
    </schedule>
    <publishers>
      <antpublisher Target="trafficlights-finish" BuildFile="build.xml" anthome="${ant.home}" />
      <onsuccess>
        <artifactspublisher dest="artifacts/${project.name}" file="projects/dist/opus.tar.gz" />
        <artifactspublisher dest="artifacts/${project.name}" file="projects/dist/opus.win32.exe" />
      </onsuccess>
    </publishers>
  </project>
</cruisecontrol>