<cruisecontrol>
  <project name="opus_core" buildafterfailed="False">
    <listeners>
      <currentbuildstatuslistener file="logs/${project.name}/status.txt" />
    </listeners>
    <bootstrappers>
      <cvsbootstrapper localWorkingCopy="projects/${project.name}" />
    </bootstrappers>
    <modificationset quietperiod="${quietperiod}">
      <cvs localWorkingCopy="projects/${project.name}" />
    </modificationset>
    <schedule interval="${interval}">
      <ant anthome="apache-ant-1.6.5" buildfile="build.xml" target="run-build">
      	<property name="buildpath" value="projects/${project.name}" />
      </ant>
    </schedule>
    <log>
      <merge dir="projects/${project.name}/tests" />
    </log>
    <publishers>
      <antpublisher Target="trafficlights-finish" BuildFile="build.xml" anthome="apache-ant-1.6.5" />
    </publishers>
  </project>
</cruisecontrol>